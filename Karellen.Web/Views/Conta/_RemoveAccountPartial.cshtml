@model ICollection<Microsoft.AspNet.Identity.UserLoginInfo>
@if (Model.Count > 0)
{
    <h4>Logins Registrados</h4>
    <hr />
    foreach (var account in Model)
    {
        <div>
            <div class="col-md-6 col-xs-6">
                <p>
                    @account.LoginProvider
                </p>
            </div>
            <div class="col-md-6 col-xs-6">
                @if (ViewBag.ShowRemoveButton)
                {
                    using (Html.BeginForm("disassociate", "conta"))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            @Html.Hidden("loginProvider", account.LoginProvider)
                            @Html.Hidden("providerKey", account.ProviderKey)
                            <input type="submit" class="btn btn-default" value="Remover" title="Remova @account.LoginProvider da sua conta" />
                        </div>
                    }
                }
                else
                {
                    @: &nbsp;
            }
            </div>
        </div>
    }

}
