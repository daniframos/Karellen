@model IEnumerable<Karellen.Web.Models.Log.LogVM>

@{
    ViewBag.Title = "Log";
}


<div id="sidewrapper">
    <h1>Logs</h1>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="fa-stack fa-5x">
                        <i class="fa fa-circle fa-stack-2x text-primary" id="circleocorrencia"></i>
                        <i class="fa fa-step-backward fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
                <div class="panel-body">
                    <h4>@ViewBag.UltimoMes Logs</h4>
                    <p><strong>no ultimo mes</strong></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="fa-stack fa-5x">
                        <i class="fa fa-circle fa-stack-2x text-primary" id="circleocorrencia"></i>
                        <i class="fa fa-star-o fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
                <div class="panel-body">
                    <h4>@ViewBag.UltimoDia Logs</h4>
                    <p><strong>nas ultimas 24 horas</strong></p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <span class="fa-stack fa-5x">
                        <i class="fa fa-circle fa-stack-2x text-primary" id="circleocorrencia"></i>
                        <i class="fa fa-step-backward fa-stack-1x fa-inverse"></i>
                    </span>
                </div>
                <div class="panel-body">
                    <h4>@ViewBag.Total Logs</h4>
                    <p><strong>no total</strong></p>
                </div>
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-12 personal-info">
            <table class="table">
                <tr>
                    <th>
                        Log
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ip)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Local)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Browser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SessaoId)
                    </th>
                    <th>
                        Alteração de entidade
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Log "+item.Id, "detalhes", "log", new { id = item.Id }, null )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Local)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Browser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessaoId)
                        </td>
                        <td style="text-align: center">
                            @Html.CheckBox("AlteracaoEntidade", !string.IsNullOrEmpty(item.EntidadeId), new { disabled = "true" })
                        </td>
                    </tr>
                }

            </table>

            <div class="row paginacao">
                <div class="col-md-12">
                    @Html.PagedListPager(Model as IPagedList, pagina => Url.Action("Index", new { pagina }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                </div>
            </div>
        </div>
    </div>
</div>


